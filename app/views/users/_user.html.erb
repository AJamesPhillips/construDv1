<tr> 
	<td><%= gravatar_for user, :size => 30 %></td> 
	<td><%= link_to user.name, user %></td>
	<% if current_user.admin? && !user.admin? %>  <!--  '&& !user.admin?'  is because you don't want to offer an option to delete another admin as that's not allowed.-->
		<td><%= link_to "delete", user, :method => :delete, 
									:confirm => "Are you sure?",
									:title => "Delete #{user.name}" %></td>

	<% elsif current_user.admin? %> 
		<td></td>
	<% end %>  <!-- implicitly, this table column will be ignored for any non admin user-->
</tr>  
